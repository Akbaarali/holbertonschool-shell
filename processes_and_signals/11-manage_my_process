#!/usr/bin/env bash
# init-like script that starts/stops/restarts the manage_my_process daemon

PIDFILE="/var/run/my_process.pid"
DAEMON="./manage_my_process"

start_process() {
  mkdir -p "$(dirname "$PIDFILE")" 2>/dev/null || true

  nohup "$DAEMON" >/dev/null 2>&1 &
  echo "$!" > "$PIDFILE"

  echo "manage_my_process started"
}

stop_process() {
  if [ -f "$PIDFILE" ]; then
    PID="$(cat "$PIDFILE" 2>/dev/null)"

    if [ -n "$PID" ] && kill -0 "$PID" 2>/dev/null; then
      kill "$PID" 2>/dev/null || true

      # Give it a moment, then force kill if still alive
      sleep 0.2
      if kill -0 "$PID" 2>/dev/null; then
        kill -9 "$PID" 2>/dev/null || true
      fi
    fi

    rm -f "$PIDFILE" 2>/dev/null || true
  fi

  # Extra safety: if anything is still running, kill by name
  pkill -f "./manage_my_process" 2>/dev/null || true
  pkill -f "manage_my_process" 2>/dev/null || true

  echo "manage_my_process stopped"
}

restart_process() {
  stop_process >/dev/null 2>&1
  start_process >/dev/null 2>&1
  echo "manage_my_process restarted"
}

case "$1" in
  start)
    start_process
    ;;
  stop)
    stop_process
    ;;
  restart)
    restart_process
    ;;
  *)
    echo "Usage: manage_my_process {start|stop|restart}"
    exit 1
    ;;
esac
