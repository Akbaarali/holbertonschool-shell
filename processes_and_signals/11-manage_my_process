#!/usr/bin/env bash
# init-like script that starts/stops/restarts the manage_my_process daemon

PIDFILE="/var/run/my_process.pid"
DAEMON="./manage_my_process"

start_process() {
  mkdir -p "$(dirname "$PIDFILE")" 2>/dev/null

  nohup "$DAEMON" >/dev/null 2>&1 &
  echo "$!" > "$PIDFILE"

  echo "manage_my_process started"
}

stop_process() {
  if [ -f "$PIDFILE" ]; then
    PID="$(cat "$PIDFILE" 2>/dev/null)"

    if [ -n "$PID" ] && kill -0 "$PID" 2>/dev/null; then
      kill "$PID" 2>/dev/null || true

      # give it a moment to exit, then force kill if needed
      sleep 0.1
      if kill -0 "$PID" 2>/dev/null; then
        kill -9 "$PID" 2>/dev/null || true
      fi
    fi

    rm -f "$PIDFILE" 2>/dev/null || true
  fi

  # extra safety: kill any leftover instance (helps if pidfile was wrong/stale)
  pkill -f "manage_my_process" 2>/dev/null || true

  echo "manage_my_process stopped"
}

case "$1" in
  start)
    start_process
    ;;
  stop)
    stop_process
    ;;
  restart)
    stop_process >/dev/null 2>&1
    start_process >/dev/null 2>&1
    echo "manage_my_process restarted"
    ;;
  *)
    echo "Usage: manage_my_process {start|stop|restart}"
    exit 1
    ;;
esac
