#!/usr/bin/env bash
# init-like script that starts/stops/restarts the manage_my_process daemon

PIDFILE="/var/run/my_process.pid"
DAEMON="./manage_my_process"

SUDO=""
if [ "$(id -u)" -ne 0 ]; then
  SUDO="sudo"
fi

start_process() {
  $SUDO mkdir -p "$(dirname "$PIDFILE")" 2>/dev/null || true

  nohup "$DAEMON" >/dev/null 2>&1 &
  $SUDO sh -c "echo $! > '$PIDFILE'" 2>/dev/null || true

  echo "manage_my_process started"
}

stop_process() {
  if $SUDO test -f "$PIDFILE" 2>/dev/null; then
    PID="$($SUDO cat "$PIDFILE" 2>/dev/null)"

    if [ -n "$PID" ]; then
      $SUDO kill "$PID" 2>/dev/null || true
    fi

    $SUDO rm -f "$PIDFILE" 2>/dev/null || true
  fi

  echo "manage_my_process stopped"
}

restart_process() {
  # Do stop/start silently, then print only "restarted"
  if $SUDO test -f "$PIDFILE" 2>/dev/null; then
    PID="$($SUDO cat "$PIDFILE" 2>/dev/null)"
    if [ -n "$PID" ]; then
      $SUDO kill "$PID" 2>/dev/null || true
    fi
    $SUDO rm -f "$PIDFILE" 2>/dev/null || true
  fi

  $SUDO mkdir -p "$(dirname "$PIDFILE")" 2>/dev/null || true
  nohup "$DAEMON" >/dev/null 2>&1 &
  $SUDO sh -c "echo $! > '$PIDFILE'" 2>/dev/null || true

  echo "manage_my_process restarted"
}

case "$1" in
  start)
    start_process
    ;;
  stop)
    stop_process
    ;;
  restart)
    restart_process
    ;;
  *)
    echo "Usage: manage_my_process {start|stop|restart}"
    exit 1
    ;;
esac
