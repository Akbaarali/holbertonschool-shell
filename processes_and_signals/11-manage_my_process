#!/usr/bin/env bash
# init-like manager for manage_my_process

PIDFILE="/var/run/my_process.pid"
DAEMON="./manage_my_process"

start_process() {
  # Ensure /var/run exists (it should)
  mkdir -p "$(dirname "$PIDFILE")" 2>/dev/null

  # Start in background and detach from terminal
  nohup "$DAEMON" >/dev/null 2>&1 &

  # Save PID
  echo $! > "$PIDFILE"

  echo "manage_my_process started"
}

stop_process() {
  if [ -f "$PIDFILE" ]; then
    PID="$(cat "$PIDFILE" 2>/dev/null)"

    if [ -n "$PID" ]; then
      kill "$PID" 2>/dev/null || true
    fi

    rm -f "$PIDFILE"
  fi

  echo "manage_my_process stopped"
}

case "$1" in
  start)
    start_process
    ;;
  stop)
    stop_process
    ;;
  restart)
    stop_process
    start_process
    echo "manage_my_process restarted"
    ;;
  *)
    echo "Usage: manage_my_process {start|stop|restart}"
    exit 1
    ;;
esac
