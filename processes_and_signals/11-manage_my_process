#!/usr/bin/env bash
# init-like script that starts/stops/restarts manage_my_process

DAEMON="./manage_my_process"
PIDFILE="/var/run/my_process.pid"

do_start() {
  nohup "$DAEMON" >/dev/null 2>&1 &
  sudo sh -c "echo $! > '$PIDFILE'"
  echo "manage_my_process started"
}

do_stop() {
  if sudo test -f "$PIDFILE"; then
    PID="$(sudo cat "$PIDFILE" 2>/dev/null)"

    if [ -n "$PID" ] && sudo kill -0 "$PID" 2>/dev/null; then
      sudo kill "$PID" 2>/dev/null || true
      sleep 0.2
      if sudo kill -0 "$PID" 2>/dev/null; then
        sudo kill -9 "$PID" 2>/dev/null || true
      fi
    fi

    sudo rm -f "$PIDFILE"
  fi

  echo "manage_my_process stopped"
}

do_restart() {
  # must print ONLY: manage_my_process restarted
  do_stop >/dev/null 2>&1
  do_start >/dev/null 2>&1
  echo "manage_my_process restarted"
}

case "$1" in
  start)
    do_start
    ;;
  stop)
    do_stop
    ;;
  restart)
    do_restart
    ;;
  *)
    echo "Usage: manage_my_process {start|stop|restart}"
    exit 1
    ;;
esac
