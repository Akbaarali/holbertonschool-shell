#!/usr/bin/env bash
# Creates /var/run/myscript.pid, prints forever, and handles signals

pidfile="/var/run/myscript.pid"

cleanup() {
  rm -f "$pidfile"
  exit 0
}

on_sigterm() {
  echo "I hate the kill command"
  cleanup
}

on_sigint() {
  echo "Y U no love me?!"
}

echo "$$" > "$pidfile"

trap on_sigterm SIGTERM
trap on_sigint SIGINT
trap cleanup SIGQUIT

while true
do
  echo "To infinity and beyond"
  sleep 2
done
