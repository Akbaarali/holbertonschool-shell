#!/usr/bin/env bash
# Creates /var/run/myscript.pid, prints forever, and handles signals

# When the checker backgrounds the process, the parent shell exits and can send SIGHUP.
# Ignore it immediately so we don't die before creating the pid file.
trap '' HUP

pidfile="/var/run/myscript.pid"

echo "$$" > "$pidfile"

cleanup() {
  rm -f "$pidfile"
  exit 0
}

on_sigterm() {
  echo "I hate the kill command"
  cleanup
}

on_sigint() {
  echo "Y U no love me?!"
}

trap on_sigterm SIGTERM
trap on_sigint SIGINT
trap cleanup SIGQUIT

while true
do
  echo "To infinity and beyond"
  sleep 2
done
